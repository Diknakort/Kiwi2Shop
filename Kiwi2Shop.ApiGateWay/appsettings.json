{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "JWT": {
    "Issuer": "Kiwi2Shop.Identity",
    "Audience": "Kiwi2Shop.Client",
    "SecretKey": "your-very-secure-secret-key-min-32-characters-long!@#$%^&*"
  },
  "ReverseProxy": {
    "Routes": {
      "identity-auth-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/v{version}/auth/{**catch-all}"
        },
        "AuthorizationPolicy": "anonymous"
      },
      "identity-users-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/v{version}/users/{**catch-all}"
        },
        "AuthorizationPolicy": "default"
      },
      "identity-roles-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/v{version}/roles/{**catch-all}"
        },
        "AuthorizationPolicy": "default"
      },
      "products-route": {
        "ClusterId": "products-cluster",
        "Match": {
          "Path": "/api/v{version}/products/{**catch-all}"
        },
        "AuthorizationPolicy": "default"
      },
      "orders-route": {
        "ClusterId": "orders-cluster",
        "Match": {
          "Path": "/api/v{version}/orders/{**catch-all}"
        },
        "AuthorizationPolicy": "default"
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "identity-api": {
            "Address": "https://identity-api"
          }
        }
      },
      "products-cluster": {
        "Destinations": {
          "products-api": {
            "Address": "https://kiwi2shop-productsapi"
          }
        }
      },
      "orders-cluster": {
        "Destinations": {
          "orders-api": {
            "Address": "https://kiwi2shop-ordersapi"
          }
        }
      }
    }
  }
}